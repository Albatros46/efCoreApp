@using efCoreApp.ViewModels
@model KursViewModel
@{
    ViewData["Title"] = "Update Page";
}

<h2 class="text-md-center">Kurs Ekle</h2>
<hr />
<div class="row">
    <div class="col-8">
        <form asp-controller="Kurs" asp-action="Edit" method="post">
            <input type="hidden" asp-for="KursId" />
            <div class="mb-3">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            <div class="mb-3">
                <label asp-for="OgretmenId" class="form-label">Ögretmen</label>
                <select asp-for="OgretmenId" asp-items="ViewBag.Ogretmenler" class="form-select">
                    <option value="">Seciniz</option>
                </select>
            </div>
            <button class="btn btn-secondary" type="submit">Save</button>
        </form>
    </div>
    <div class="col-4">
        <h4>Ögrenciler</h4>
        <hr />
        <ul>
            @foreach (var item in Model.KursKayitlari)
            {
                <li>@item.Ogrenci.AdSoyad</li>
            }
        </ul>
    </div>
</div>
