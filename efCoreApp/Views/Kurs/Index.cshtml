@model IEnumerable<Kurs>

@{
    ViewData["Title"] = "Ögrenci Page";
}

<h2>Kurs Güncelleme</h2>
<hr />
<a asp-action="Create" asp-controller="Kurs" class="btn btn-primary"><i class="fa-solid fa-user-plus"></i> Kurs Ekle</a>
@* <a asp-action="Create" asp-controller="Ogrenci" class="btn btn-success"><i class="fa-solid fa-table"></i> Excell</a>
<a asp-action="GeneratePdf" asp-controller="Ogrenci" class="btn btn-success"><i class="fa-solid fa-file-pdf"></i> Pdf</a>
 *@
<table class="table table-striped table-hover">
    <thead>
        <tr>

            <th scope="col">@Html.DisplayNameFor(p => p.KursId)</th>
            <th scope="col">@Html.DisplayNameFor(p => p.Title)</th>
            <th scope="col" style="width:300px">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kurs in Model)
        {
            <tr>
              @*   <td>@kurs.KursId</td>
                <td>@kurs.Title</td> *@
                <td>@Html.DisplayFor(modelItem=>kurs.KursId)</td>
                <td>@Html.DisplayFor(modelItem=>kurs.Title)</td>
                <td>
                    @*  <a href="" class="btn btn-warning"><i class="fa-solid fa-circle-info"></i> Details</a> *@
                    <a asp-action="Edit" asp-controller="Kurs" asp-route-id="@kurs.KursId" class="btn btn-info"><i class="fa-regular fa-pen-to-square"></i> Edit</a>
                    <a href="" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Delete</a>
                </td>
            </tr>
        }


    </tbody>
</table>