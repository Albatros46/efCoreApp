@model IEnumerable<Ogrenci>
@{
    ViewData["Title"] = "Ögrenci Page";
}

    <h2>Ögrenci Listesi</h2>
    <hr />
<a asp-action="Create" asp-controller="Ogrenci" class="btn btn-primary"><i class="fa-solid fa-user-plus"></i> Ögrenci Ekle</a>
@* <a asp-action="Create" asp-controller="Ogrenci" class="btn btn-success"><i class="fa-solid fa-table"></i> Excell</a>
<a asp-action="GeneratePdf" asp-controller="Ogrenci" class="btn btn-success"><i class="fa-solid fa-file-pdf"></i> Pdf</a>
 *@
 <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">@Html.DisplayNameFor(p=>p.FirstName)</th>
            <th scope="col">@Html.DisplayNameFor(p=>p.LastName)</th>
            <th scope="col">@Html.DisplayNameFor(p=>p.Eposta)</th>
            <th scope="col">@Html.DisplayNameFor(p=>p.Telefon)</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ogrenci in Model)
        {
            <tr>
                <td>@ogrenci.OgrenciId</td>
                <td>@ogrenci.FirstName</td>
                <td>@ogrenci.LastName</td>
                <td>@ogrenci.Eposta</td>
                <td>@ogrenci.Telefon</td>
                <td>
                   @*  <a href="" class="btn btn-warning"><i class="fa-solid fa-circle-info"></i> Details</a> *@
                   <!--Farkli bir controller olursa asp-controller yazmak yorundayiz.-->
                    <a asp-action="Edit" asp-controller="Ogrenci" asp-route-id="@ogrenci.OgrenciId" class="btn btn-info"><i class="fa-regular fa-pen-to-square"></i> Edit</a>
                </td>
            </tr>
        }


    </tbody>
</table>